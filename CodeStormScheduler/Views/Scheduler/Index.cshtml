            </div>
</section>
<div>
    <input type="button" value="Events" id="btnGetEvents"/>
</div>

@section scripts{

    <script>
        $(document).ready(function() {
            scheduler.init('scheduler_here', new Date(), "month");
            var events = [
                { id: 1, text: "Meeting", start_date: "06/11/2015 14:00", end_date: "06/11/2015 17:00" },
                { id: 2, text: "Conference", start_date: "06/15/2015 12:00", end_date: "06/18/2015 19:00" },
                { id: 3, text: "Interview", start_date: "06/24/2015 09:00", end_date: "06/24/2015 10:00" }
            ];
            scheduler.parse(events, "json");
            $('#btnGetEvents').click(function () {
                var evs = scheduler.getEvents();
                alert(JSON.stringify(evs));
            });
            scheduler.attachEvent("onBeforeEventChanged", function (ev, e, is_new, original) {
                //any custom logic here
                alert(JSON.stringify(original));
                return true;
            });
        });
    </script>
