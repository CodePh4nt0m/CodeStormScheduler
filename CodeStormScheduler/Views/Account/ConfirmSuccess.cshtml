@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CodeStorm - Confirm Email</title>
    <base href="/">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300&subset=latin" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/PixelAdmin")
    @Styles.Render("~/Content/Plugins")
    <link href="~/Content/blankpages.css" rel="stylesheet" />
</head>
<body class="theme-default page-404 page-notice page-emailinfo">
    <script>var init = [];</script>
    <div class="header">
        <a href="/" class="logo">
            <div class="demo-logo"><img src="assets/demo/logo-big.png" alt="" style="margin-top: -4px;"></div>&nbsp;
            <strong>CodeStorm</strong>
        </a> <!-- / .logo -->
    </div> <!-- / .header -->

    <div class="container">
        <div class="note note-info">
            <div class="msg-heading"><b>EMAIL VERIFICATION SUCCESSFUL</b>
            </div>
            <br/>
            <p >Thank you for verifying your identity. Now you can successfuly login to the site. Use the navigate button below to go to login page.</p>
            <div class="action-buttons">
                <input type="button" class="btn btn-primary" value="Navigate to Login" id="btn-login" />
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/pixeladmin")
    @Scripts.Render("~/bundles/plugins")
    <script type="text/javascript">
        window.CodeStorm = {};
    </script>

    <script src="~/Scripts/CodeStorm.js"></script>
    <script src="~/App/App.js"></script>
    <script type="text/javascript">
        init.push(function () {
            // Javascript code here
        });
        window.PixelAdmin.start(init);
        $('#btn-login').click(function () {
            window.location.href = "/Account/Login";
        });
    </script>
</body>
</html>
