@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CodeStorm - Confirm Email</title>
    <base href="/">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300&subset=latin" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/PixelAdmin")
    @Styles.Render("~/Content/Plugins")
    <link href="~/Content/blankpages.css" rel="stylesheet" />
</head>
<body class="theme-default page-signup-alt page-reset-pass">
    <script>var init = [];</script>
    <div class="signup-header">
        <a href="index.html" class="logo">
            <div class="demo-logo bg-primary"><img src="assets/demo/logo-big.png" alt="" style="margin-top: -4px;"></div>&nbsp;
            <strong>CodeStorm</strong>
        </a> <!-- / .logo -->
        <a href="/account/login" class="btn btn-primary">Sign In</a>
    </div>
    <h1 class="form-header">Reset Password</h1>
    <form action="index.html" id="reset-form_id" class="panel" novalidate="novalidate">
        <div class="form-group">
            <input type="text" name="signup_email" id="email_id" class="form-control input-lg" placeholder="E-mail">
        </div>

        <div class="form-group">
            <input type="text" name="signup_username" id="username_id" class="form-control input-lg" placeholder="New Password">
        </div>

        <div class="form-group">
            <input type="password" name="signup_password" id="password_id" class="form-control input-lg" placeholder="Retype Password">
        </div>

        <div class="form-actions">
            <input type="submit" value="Reset Password" class="btn btn-primary btn-lg btn-block">
        </div>
    </form>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/pixeladmin")
    @Scripts.Render("~/bundles/plugins")
    <script type="text/javascript">
        window.CodeStorm = {};
    </script>

    <script src="~/Scripts/CodeStorm.js"></script>
    <script src="~/App/App.js"></script>
    <script type="text/javascript">
        init.push(function () {
            // Javascript code here
        });
        window.PixelAdmin.start(init);
        $('#btn-home').click(function () {
            window.location.href = "/";
        });
        $('#btn-send').click(function () {
            var dataHelper = commonHelper();
            dataHelper.postData('/Account/ConfirmEmail', null,
                function (result) {
                });
            window.location.href = "/Account/ConfirmEmailResend";
        });
    </script>
</body>
</html>
